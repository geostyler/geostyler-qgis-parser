{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "lib": ["ES2022", "dom"],
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ES2022",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "jest",
    "src/setupTests.ts",
    "src/**.spec.ts",
    "data",
    "coverage",
    "browser",
    "webpack**.config.js"
  ]
}
